<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humans"
        android:onClick="toggleButton_onClick"/>
    <TextView
        android:id="@+id/humansGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/default_circle"
         />
    <TextView
        android:id="@+id/humansRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:background="@drawable/default_circle"/>

</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cars"
                android:onClick="cars_OnClick"/>
            <TextView
                android:id="@+id/carsGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/default_circle"
                />
            <TextView
                android:id="@+id/carsRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/default_circle"/>
    </LinearLayout>

</LinearLayout>

</>
